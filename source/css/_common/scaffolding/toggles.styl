/* 右上按钮 */
.toggle {
  line-height: 0;

  .toggle-line {
    background: var(--nav-menu-color);
    //border-radius: 1px; //似乎无效
    display: block;
    height: 2px;
    left: 0;
    position: relative;
    top: 0;
    transition: all .4s;
    width: 100%;

    &:first-child {
      margin-top: 10%;
    }

    &:not(:first-child) {
      margin-top: 30%;
    }
  }
}

.toggle.toggle-arrow {
  toggle-arrow(hexo-config('sidebar.position'));
}

.toggle.toggle-close {
  toggle-close(hexo-config('sidebar.position'));
}
