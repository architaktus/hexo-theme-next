.card-stack-block {
  padding-top: var(--outer-gutter);
  padding-bottom: var(--outer-gutter);
  padding-left: var(--outer-gutter);
  padding-right: var(--outer-gutter);
  background-color: var(--scheme-color-a);//TODO
  color: var(--scheme-color-c);//TODO
}

//block标题
.card-stack-block__heading
    line-height: 1;
    text-align: center;
    text-transform: uppercase;
    word-wrap: break-word;

    font-family: Maria,sans-serif;
    font-size: 60px;
+mobile()
    .card-stack-block__heading
        font-size: 100px;
+desktop()
    .card-stack-block__heading[data-label="primary"]
        margin-bottom: -60px;
    .card-stack-block__heading[data-label="secondary"]
        margin-top: -40px; 
    .card-stack-block__heading
        font-size: 160px;
        

//居中
.card-stack-block__card-outer-wrapper {
    max-width: var(--container-width);
    display: block;
    width: 100%;
    margin-left: auto;
    margin-right: auto;

    +desktop(){
        padding-bottom: 1px;
    }
}

// block 的内框
// TODO 小屏幕叠加、滑动切换功能
.card-stack-block__card-inner-wrapper {

    +desktop(){
        /* 水平排列 */
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;

        /*多行排列*/
        flex-wrap();

        margin: -20px;
    }
}

// 卡片card wrapper
.card-stack__card {
    background: none;
    color: inherit;
    font: inherit;
    text-decoration: inherit;
    border: 0;
    border-radius: 0;
    padding: 0;
    margin: 0;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    position: relative;
    display: block;
    overflow: hidden;

    +desktop(){
        width: calc(100%/3 - 40px);
        margin: 20px;

        -webkit-transition: -webkit-transform .3s;
        transition: -webkit-transform .3s;
        transition: transform .3s;
        transition: transform .3s,-webkit-transform .3s;

        box-shadow: 0 5px 7px rgba(0,0,0,.25);
    }

    &::before {
        content: '';
        display: block;
        padding-bottom: 150%;
    }

    &:hover,
    &:active,
    &:focus {
        -webkit-transform:scale(1.05);
        transform:scale(1.05);
    }
}

//card链接
.card-stack__card__link {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    z-index: 2;

    //下划线
    border-bottom: 0;
}

// card内容div
.card-stack__card__headline {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;

    z-index: 1;

    //不能鼠标选择
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.card__background__media img, .card__background__media video {
    object-fit: cover;
    height: 100%;
    width: 100%;
}


//degraded
.degraded {
    background-color: rgba(0,0,0,.4);
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    /*z-index: 1;*/
}