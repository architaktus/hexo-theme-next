@media (min-width: 760px) {
  .brand {
    width: 130px;
    margin-top: 12px;
    margin-bottom: 12px;
  }
}
@media (min-width: 960px) {
  .brand {
    width: 130px;
    margin-top: 21px;
    margin-bottom: 21px;
  }
}

.use-motion {
  .column, .site-brand-container .toggle {
    opacity: 0;
  }

  .logo-line:first-of-type {
    transform: scaleX(0);
    transform-origin: left;
  }

  .logo-line:last-of-type {
    transform: scaleX(0);
    transform-origin: right;
  }
  .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}





