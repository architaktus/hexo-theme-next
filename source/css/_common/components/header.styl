.site-nav-toggle, .site-nav-right {
  display: none;

  +mobile() {
    flex-column();
  }

  .toggle {
    color: var(--text-color);
    padding: 10px;
    width: 22px;

    .toggle-line {
      background: var(--nav-menu-color); //var(--text-color);
      border-radius: 1px;
    }
  }
}

.site-nav {
  +mobile() {
    site-nav-hide-by-default();
  }
}


/*mixin*/
site-nav-hide-by-default() {
  --scroll-height: 0;
  height: 0;
  overflow: hidden;
  transition: $transition-ease;
  transition-property: height, visibility;
  visibility: hidden;

  body:not(.site-nav-on) & .animated {
    animation: none;
  }

  body.site-nav-on & {
    height: var(--scroll-height);
    visibility: unset;
  }
}



