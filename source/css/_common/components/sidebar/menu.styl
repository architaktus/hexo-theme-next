.menu {
  //padding: 0;

  //原内容
  margin: 0;
  padding: 1em 0;
  text-align: center;

  .menu-item {
    //margin: 0;

    //原内容
    display: inline-block;
    list-style: none;
    margin: 0 10px;

    +mobile() {
      //margin-top: 5px;
      //margin: 0 10px;

      //原内容
      display: block;
      margin-top: 10px;
      &.menu-item-search {
        display: none;
      }
    }

    a {
      /* border-bottom: 1px solid transparent; */
      border-radius: 2px;
      padding: 0 10px;
      transition-property: background;

      //原内容
      border-bottom: 0;
      display: block;
      font-size: $font-size-smaller;
      transition: border-color $transition-ease;

      /*    &:hover, &.menu-item-active {
      background: transparent;
      border-bottom: 1px solid var(--link-hover-color); */

      +mobile() {
        text-align: left;
        /* padding: 5px 10px; */
      }


      &:hover, &.menu-item-active {
        background: var(--menu-item-bg-color);
      }
    }

    
    i[class^='fa'] {
      margin-right: 8px;
      /*+tablet-desktop() {
        display: block;
        line-height: 2;
        margin-right: 0;
        width: 100%;
      }*/
    }

    .badge {
      background: white; /*background: $gainsboro;*/
      border-radius: 10px;
      color: $black-light;
      padding: 1px 4px;
      text-shadow: 1px 1px 0 rgba(0, 0, 0, .1);

      //原内容 
      display: inline-block;
      font-weight: bold;
      line-height: 1;
      margin-left: .35em;
      margin-top: .35em;
      text-align: center;
      white-space: nowrap;
      +mobile() {
        float: right;
        margin-left: 0;
      }  
    }
  }
}

//原内容
if (hexo-config('motion.transition.menu_item')) {
  .use-motion .menu-item {
    visibility: hidden;
  }
}

// sub-menu
