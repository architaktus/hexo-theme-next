//原muse +mist
header.header {
  main-container();
}

.main-inner {
  main-container();
  padding-bottom: $content-padding-bottom;

  +mobile() {
    padding-left: 20px;
    padding-right: 20px;
  }
}

// Page - Container
// --------------------------------------------------
.post-block:first-of-type {
  padding-top: $posts-first-padding;

  +mobile() {
    padding-top: $posts-first-padding-mobile;
  }
}


//原 mist 

// Tags
// --------------------------------------------------
hr {
  height: 2px;
  margin: 20px 0;
}

// Components
// --------------------------------------------------
.btn {
  padding: 0 10px;
}

.headband {
  display: none;
}

// Pagination
// --------------------------------------------------
.pagination {
  +mobile() {
    margin: 80px 0 0;
    text-align: center;
  }
}

// Footer
// --------------------------------------------------
.footer {
  background: var(--content-bg-color);
  color: var(--text-color);
  padding: 10px 0;
}

.footer-inner {
  +mobile() {
    text-align: center;
  }
}


