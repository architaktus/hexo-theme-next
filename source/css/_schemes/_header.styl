// Header
// --------------------------------------------------
.column {
  background: var(--content-bg-color);
}

header.header {
  align-items: center;
  display: flex;
  padding: 20px 0;
  //padding-top: 100px;

  +mobile() {
    display: block;
    padding: 10px 0;
    //padding-top: 50px;
  }
}

.site-meta {
  line-height: normal;

  .brand {
    //background: var(--btn-default-bg);
    +mobile() {
      display: block;
    }
  }

  .site-title {
    font-weight: bolder;
  }
}

.logo-line {
  background: var(--brand-color);
  display: block;
  height: 2px;
  margin: 0 auto;
  width: 75%;

  +mobile() {
    display: none;
  }
}

.use-motion {
  .logo-line:first-of-type {
    transform: scaleX(0);
    transform-origin: left;
  }

  .logo-line:last-of-type {
    transform: scaleX(0);
    transform-origin: right;
  }
}

.site-subtitle {
  display: none;
}


